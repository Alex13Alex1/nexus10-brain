# Crypto Trading Bot - Environment Variables
# Copy this file to .env and fill in your values

# Exchange API Credentials (get from your exchange)
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here

# Trading Settings
PAPER_TRADING=true
EXCHANGE_ID=binance
SYMBOL=BTC/USDT
TIMEFRAME=1h

# Risk Management
STOP_LOSS_PCT=2.0
TAKE_PROFIT_PCT=4.0
POSITION_SIZE_PCT=10.0

# RSI Settings
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Bollinger Bands Settings
BB_PERIOD=20
BB_STD=2.0

# Operational
CHECK_INTERVAL_SECONDS=60
LOG_FILE=trades.csv














